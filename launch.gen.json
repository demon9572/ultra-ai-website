def calculate_total_price(item_prices, quantities, discount_rate=0.0):
    """
    Calculates the total price of items considering quantities and a discount.

    Args:
        item_prices (list): A list of prices for each item.
        quantities (list): A list of quantities for each item.
        discount_rate (float): The discount rate to apply (e.g., 0.1 for 10%). Defaults to 0.0.

    Returns:
        float: The total price after applying the discount.
    """

    if len(item_prices) != len(quantities):
        raise ValueError("The number of item prices and quantities must be the same.")

    subtotal = sum(price * quantity for price, quantity in zip(item_prices, quantities))
    discount_amount = subtotal * discount_rate
    total = subtotal - discount_amount

    return total

# Example Usage:
if __name__ == '__main__':
    prices = [10.0, 20.0, 30.0]
    quantity = [2, 1, 3]
    discount = 0.1

    total_price = calculate_total_price(prices, quantity, discount)
    print(f"Total price: ${total_price:.2f}")
// ```
